# Task Scheduler Configuration

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/taskscheduler

# Redis
REDIS_URL=redis://localhost:6379

# Scheduler
SCHEDULER_INTERVAL_SECONDS=1
MAX_CONCURRENT_JOBS=10

# Retry Settings
MAX_RETRIES=3
RETRY_BASE_DELAY=60
RETRY_MAX_DELAY=3600
RETRY_EXPONENTIAL_BASE=2.0

# Dead Letter Queue
DLQ_ENABLED=true
DLQ_RETENTION_DAYS=7

# Worker Settings
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TIMEOUT=300

# Environment
ENVIRONMENT=development
DEBUG=true
